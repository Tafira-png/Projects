<%- include ('layouts/header') %>

<label for=""> Search </label>
<input id="search" type="text" name="search">
<br><br>
<div class="row products">

    <% products.forEach(function(p){ %>
        
        <div class="col-xs-12 col-md-4 p FilterContent">
            <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                <img class="pimage" src=<% if(p.image ==""){ %>
                    "/images/noimage.jpg" >
                <% } else if(p.imgurURL) { %>
                    "<%= p.imgurURL %>" >
                <% } else { %> 
                    "/product_images/<%= p.id %>/<%= p.image %>" >
                <% }  %>    
            </a>
            <div style="margin:5px;padding:5px;">
            <h3 ><%= p.title %></h3>
            <h4>$<%= parseFloat(p.price).toFixed(2) %></h4>
            <a class="vd" href="/products/<%=p.category %>/<%= p.slug %>"> View Details</a>
            </div>
        </div>
   <% }); %>

</div>


<%- include ('layouts/footer') %>