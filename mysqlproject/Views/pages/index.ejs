<%- include ('../partials/header'); %>
<div class="">
    <div class="col s12">
        <a href="/event/add" class="btn btn-success btn-lg">Add a new event</a>
    </div>
</div>
</br>
<div class ="=">
    <div class = "col s12">
        <% if (items.length > 0) { %>
            <table class ="table">
                <thead>
                    <tr>
                        <th style ="width:1%;text-align:center">ID</th>
                        <th style = "width:49%">Name</th>
                        <th style ="width:20%">Description</th>
                        <th style ="width:10%">Location</th>
                        <th colspan="2" style="width:20%;text-align:center"> Actions</th>
                    </tr>                  
                </thead>
                <tbody>
                    <% items.forEach((item,index) => { %>
                        <tr>
                            <td style ="width:1%;text-align:center">
                                <%= index + 1 %>
                            </td>
                            <td style = "width:49%">
                                <%= item.eventname %>
                            </td>
                            <td style ="width:20%">
                                <%= item.eventdescription %>
                            </td>
                            <td style ="width:10%">
                                <%= item.eventlocation %>
                            </td>
                            <td colspan="2" style="width:20%;text-align:center"> <a href="/event/edit/<%= item.eventid %>" class="btn btn-success">Edit</a>
                            <a href="/event/delete/<%=item.eventid %>" class="btn btn-danger">Delete</a> 
                            </td>
                        </tr>
                 <%   }); %>
                </tbody>
            </table>
      <%  } else{ %>
            <p><strong>There are no records available</strong></p>
     <% } %>
    </div>
</div>

<%- include ('../partials/foot'); %>