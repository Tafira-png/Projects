<%- include ('../partials/header'); %>
</br>
<form action ="http://localhost:3000/event/edit/<%= item[0].eventid %>" method="POST" class="col s12">
    <input type="hidden" name="eventid" value="<%= item[0].eventid %>"> 
    <div class="form-group row">
        <label for="eventname"class="col-2 col-form-label">Name</label>
        <div class="col-10">
            <input type="text" name="eventname" value="<%= item[0].eventname %>" class="form-control">
        </div>
    </div> 

<div class="form-group row">
    <label for="eventstarttime" class="col-2 col-form-label">Start date</label>
    <div class="col-10">
        <input type="date" name="eventstarttime" value="<%= item[0].eventstarttime %>" class="form-control">
    </div>
</div>

<div class="form-group row">
        <label for="eventendtime"class="col-2 col-form-label"> End Time</label>
    <div class="col-10">
            <input type="date" name="eventendtime" value="<%= item[0].eventendtime %>"  class="form-control">
    </div>
</div>

<div class="form-group row">
    <label for="eventdescription" class="col-2 col-form-label">
        Description
    </label>
    <div class="col-10">
        <textarea name="eventdescription" id="eventdescription" cols="30", rows="4" class="form-control"><%= item[0].eventdescription %> </textarea>
    </div>
</div>

<div class="form-group  row">
    <label for="eventlocation" class="col-2 col-form-label">
        Location
    </label>
    <div class="col-10">
        <textarea name="eventlocation" id="eventlocation" cols="30", rows="4" class="form-control"><%= item[0].eventlocation %> </textarea>
    </div>
</div>

<div class="form-group-row">
<label for="submit" class="col-2 col-form-label" style="color:#ffffff">
    Click here to submit
</label>
    <div class="col-10">
        <input type="submit" name="submit" value="Save event" class="btn btn-primary btn-lg">
    </div>
</div>    
</form>
<%- include ('../partials/foot'); %>